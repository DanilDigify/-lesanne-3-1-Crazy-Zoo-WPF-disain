<Window x:Class="OopAnimalsApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OopAnimalsApp"
        mc:Ignorable="d"
        Title="OOP Animals App" Height="600" Width="900">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="250"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Left Panel: Animal List -->
        <StackPanel Grid.Column="0" Grid.Row="0" Grid.RowSpan="2" Margin="10">
            <TextBlock Text="Animals" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
            <ListBox x:Name="AnimalListBox" ItemsSource="{Binding Animals}"
                     SelectedItem="{Binding SelectedAnimal}"
                     Height="400">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Name}"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <StackPanel Margin="0,10,0,0" Orientation="Vertical">
                <Button x:Name="AddAnimalBtn" Content="Add Animal" Click="AddAnimal_Click" Margin="0,5" Padding="8"/>
                <Button x:Name="RemoveAnimalBtn" Content="Remove Animal" Click="RemoveAnimal_Click" Margin="0,5" Padding="8"/>
            </StackPanel>
        </StackPanel>

        <!-- Middle Panel: Animal Details and Actions -->
        <StackPanel Grid.Column="1" Grid.Row="0" Grid.RowSpan="2" Margin="10" VerticalAlignment="Top">
            <TextBlock Text="Selected Animal Details" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
            <TextBlock x:Name="AnimalDescTextBlock" Text="(No animal selected)"
                       FontSize="12" Margin="0,0,0,20" Foreground="Gray" MinHeight="40"/>

            <TextBlock Text="Actions" FontWeight="Bold" FontSize="12" Margin="0,0,0,10"/>
            <Button x:Name="MakeSoundBtn" Content="Make Sound" Click="MakeSound_Click"
                    Margin="0,5" Padding="10" IsEnabled="False"/>

            <StackPanel Margin="0,10,0,0" Orientation="Horizontal">
                <TextBox x:Name="FoodTextBox" Width="150" Padding="5" Foreground="Black"/>
                <Button x:Name="FeedBtn" Content="Feed" Click="Feed_Click"
                        Margin="5,0,0,0" Padding="10,5" Width="60" IsEnabled="False"/>
            </StackPanel>

            <Button x:Name="CrazyActionBtn" Content="Crazy Action" Click="CrazyAction_Click"
                    Margin="0,10,0,0" Padding="10" IsEnabled="False"/>

            <TextBlock Text="Logging Helper (Example)" FontSize="10" Foreground="Gray" Margin="0,20,0,5"/>
        </StackPanel>

        <!-- Right Panel: Log -->
        <StackPanel Grid.Column="2" Grid.Row="0" Grid.RowSpan="2" Margin="10">
            <TextBlock Text="Action Log" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
            <ListBox x:Name="LogListBox" ItemsSource="{Binding Log}" Height="500">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" TextWrapping="Wrap"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <Button x:Name="ClearLogBtn" Content="Clear Log" Click="ClearLog_Click"
                    Margin="0,5" Padding="8"/>
        </StackPanel>
    </Grid>
</Window>
