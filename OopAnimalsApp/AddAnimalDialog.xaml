<Window x:Class="OopAnimalsApp.AddAnimalDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add New Animal" Height="250" Width="400"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        Background="White">
    <StackPanel Margin="20" VerticalAlignment="Top">
        <TextBlock Text="Animal Name:" FontWeight="Bold" Margin="0,0,0,5"/>
        <TextBox x:Name="NameTextBox" Height="30" Padding="8" Margin="0,0,0,15"/>

        <TextBlock Text="Animal Age:" FontWeight="Bold" Margin="0,0,0,5"/>
        <TextBox x:Name="AgeTextBox" Height="30" Padding="8" Margin="0,0,0,15"/>

        <TextBlock Text="Animal Type:" FontWeight="Bold" Margin="0,0,0,5"/>
        <ComboBox x:Name="TypeComboBox" Height="30" Padding="8" Margin="0,0,0,20">
            <ComboBoxItem>Cat</ComboBoxItem>
            <ComboBoxItem>Dog</ComboBoxItem>
            <ComboBoxItem>Bird</ComboBoxItem>
            <ComboBoxItem>Raccoon</ComboBoxItem>
            <ComboBoxItem>Monkey</ComboBoxItem>
        </ComboBox>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="OK" Click="OK_Click" Width="80" Padding="10" Margin="0,0,10,0"/>
            <Button Content="Cancel" IsCancel="True" Width="80" Padding="10"/>
        </StackPanel>
    </StackPanel>
</Window>
